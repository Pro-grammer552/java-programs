package com.prep;

public class RemoveExtraSpaces {

	public static void main(String[] args) {
		String s = "  i am  suraj";
		String n = s.trim();
		String a = " ";
		String p = "";
		String rep = n.replace(" ", " ");

		System.out.println(rep);

		
		String[] words = s.split(" ");
		
		for (String word : words) {
		    if (!word.isEmpty()) {
		        a += word + " ";
		    }
		}
		System.out.println(a);
	}
}
