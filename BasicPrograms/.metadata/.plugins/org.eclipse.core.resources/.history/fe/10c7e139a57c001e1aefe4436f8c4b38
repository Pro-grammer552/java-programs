package com.prep;
/*
 Q12)Given sentence and a word, 
 find if the word can be formed 
 from given characters in sentence.   [1M]

For example, 
s1=”THE SKY IS THE LIMIT”
word = "AXE", -> No 
word = "SIT", -> Yes can be formed
word = "AMIT", -> Yes can be formed
 */

public class WordCombinantion {

	public static void main(String[] args) {
		String s = "the sky has no limit";
		String tar = "thn";

		for (int i = 0; i < tar.length(); i++) {
			char c = tar.charAt(i);
			boolean flag = false;

			for (int j = 0; j < s.length(); j++) {
				if (s.charAt(j) == c) {
					flag = true;
					break;
				}
			}

			if (flag) {
				System.out.println("true");
			} else {
				System.out.println("false");
			}
		}
	}
}
