package com.prep;

public class RemoveExtraSpaces {

	public static void main(String[] args) {
		String s = "  i am  suraj";
		String n = s.trim();
		String a = " ";
		String p = "";
		// String rep = n.replace(" ", " ");

		// System.out.println(rep);

		char ch[] = n.toCharArray();

		for (int i = 0; i < ch.length; i++) {

			// if (ch[i] != ' ') {
			//
			// p += ch[i];
			// } else {
			// if (p != "") {
			// a = a + p + " ";
			// p = "";
			//
			// }
			// }

			if (ch[i] != ' ') {
				p += ch[i];
				p+= ' ';
			} else {
				if (ch[i] == ' ') {

					continue;
				}

			}

		}

		System.out.println(p);

	}

}
