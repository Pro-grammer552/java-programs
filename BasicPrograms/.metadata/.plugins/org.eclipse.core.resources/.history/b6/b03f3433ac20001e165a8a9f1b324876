package Assignment12K;

import java.util.Scanner;

/*
create student class student having id name three subject marks 
ASSIGN Data to student 
calculate the percentage on the basis of marks and then display the result using
student imformation percentage and as per the student percentage grade 
 */

public class Student {

	int id;
	String name;
	double mark1, mark2, mark3;
	double percentage;

	public void declare(int Id, String dname, int i, int j, int k) {

		id = Id;
		name = dname;
		mark1 = i;
		mark2 = j;
		mark3 = k;
		
		Scanner sc=new Scanner(System.in);
		System.out.print("Enter the Id :"+ id);
		int id=sc.nextInt();
		
		
		
		System.out.println("Enter the name :"+ dname);
		String name=sc.next();
		
		
		System.out.println("Enter the mark1 :"+ i);
		int mark1=sc.nextInt();
		
		System.out.println("Enter the mark2 :"+ j);
		int mark2=sc.nextInt();
		
		System.out.println("Enter the mark3 :"+ k);
		int mark3=sc.nextInt();
		
		double percentage = (((mark1 + mark2 + mark3) / 300) * 100);
		
		if(percentage>70)
		{
			System.out.println("Grade A"+percentage);
		}
		System.out.println(id + " " + dname + " " + mark1 + " " + j + " " + k + " ");

		

	}
	
	
	

	public void Display()

	{
		

		System.out.println("percentage  :" + percentage + "%");

	}

	public static void main(String[] args) {
	
		
		
		
		
		
		
		
		
		
		Student s1 = new Student();
		s1.declare(101, "Suraj", 70, 80, 90);
		s1.Display();
		System.out.println("-------------------");
		Student s2 = new Student();
		s2.declare(102, "Rushi", 100, 100, 100);
		s2.Display();

	}

}
