		String arr[] = {"red", "white", "red", "white", "black","red"};

		for (int i = 0; i < arr.length; i++) {
			int count = 0;
			if (arr[i] == "-1") {
				continue;
			}

			for (int j = 0; j < arr.length; j++) {
				if (arr[i].equals(arr[j])) {
					count++;
					if (i != j) {
						arr[j] = "-1";
					}
				}
			}

			System.out.println(arr[i] + ": " + count);
		}
	}
}