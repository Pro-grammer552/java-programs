package com.prep;

import java.util.ArrayList;

public class Employee {
	int id;
	String name;
	int salary;

	public Employee(int id, String name, int salary) {
		this.id = id;
		this.name = name;
		this.salary = salary;
	}

	public static void main(String[] args) {

		String vowel = "AEIOUaeiou";

		ArrayList<Employee> arr = new ArrayList<>();
		arr.add(new Employee(1, "Alice", 50000));
		arr.add(new Employee(2, "Boc", 80000));
		arr.add(new Employee(3, "Bobbb", 90000));
		arr.add(new Employee(4, "Bobb", 10000));

		for (int i = 0; i < arr.size(); i++) {
			int vowelCount = countVowels(arr.get(i).name);
			if (vowelCount >= 2) {
				System.out.println("Employee ID: " + arr.get(i).id + ", Name: "
						+ arr.get(i).name);
			}
		}
	}

	static int countVowels(String name) {
		int count = 0;
		for (char c : name.toLowerCase().toCharArray()) {
			if ("aeiou".contains(String.valueOf(c))) {
				count++;
			}
		}
		return count;

	}
}