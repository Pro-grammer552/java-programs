package com.prep;

public class RemoveExtraSpaces {

	public static void main(String[] args) {
		String s = "  i am  suraj";
		String n = s.trim();

		String p = "";
		// String rep = n.replace(" ", " ");

		// System.out.println(rep);
		String a = "";
		char ch[] = n.toCharArray();

		for (int i = 0; i < ch.length - 1; i++) {
			// if (ch[i + 1] == ' ') {
			// ch[i] = (char) (ch[i]+ ' ');
			// } else if (ch[i] != ' ') {
			// p += ch[i];
			// }
			//
			// else {
			//
			// ch[i] += ch[i];
			//
			// }
			//
			// }

			if (ch[i] != ' ') {

				p += ch[i];
			} else {
				if (p != "") {
					a = p + a + " ";      
					p="";

				}
			}
		}

		System.out.println(p);

	}

}
