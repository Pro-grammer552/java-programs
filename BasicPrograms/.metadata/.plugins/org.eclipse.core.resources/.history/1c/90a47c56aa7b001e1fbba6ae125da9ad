package com.prep;

public class RemoveExtraSpaces {

	public static void main(String[] args) {
		String s = "  i am  suraj";
		String n = s.trim();
		String a = " ";
		String p = "";
		String rep = n.replace(" ", " ");

		System.out.println(rep);

	
		String s2 = "";

		String arr[] = s.split(" ");

		for (int i = 0; i < arr.length; i++) {
			arr[i] = arr[i].trim();
			s2 += arr[i];
			s2 += " ";
		}
		System.out.println(s2);

		System.out.println(p);

	}

}
