package com.ArrayListAssignment;

public class Pattern {
	/*
	 * A ABA ABCBA ABCDCBA ABCDEDCBA
	 */

	public static void main(String[] args) {

		for (int i = 1; i <= 5-i; i++) {
			for (int j = 1; j <= 4; j++) {
				System.out.print(" ");
			}

			for (int j = 1; j <= i; j++) {
				System.out.println("A");
			}
			System.out.println();

		}
	//	System.out.println();

	}

}
