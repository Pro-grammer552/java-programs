
public class LongestSubarrayMirror {

	public static void main(String[] args) {
	int arr[]= {1,1,1,0,0,0,1};
	
	int count1=0;
	int count2=0;
	int max=0;
	for(int i=0;i<arr.length;i++)
	{
		if(arr[i]==1)
		{
			count1++;
		}
		if(arr[i]==0)
		{
			count2++;
		}
		
		max=count1+count2;
	}
	System.out.println(max);

	}

}
