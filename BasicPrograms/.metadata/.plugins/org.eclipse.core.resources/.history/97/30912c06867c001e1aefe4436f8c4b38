package com.prep;

public class SecondMax {

	public static void main(String[] args) {

		String s = "india is beautiful country";
		String word[] = s.split(" ");

		int max = word[0].length();
		for (int i = 0; i < word.length; i++) {
			if (word[i].length() > max) {
				max = word[i].length();
			}

			System.out.println(word[i]+" "+max);
		}

	}

}
