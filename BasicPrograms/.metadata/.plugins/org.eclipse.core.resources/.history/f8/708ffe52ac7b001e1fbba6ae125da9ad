package com.prep;

public class RemoveExtraSpaces {

	public static void main(String[] args) {
		String s = "  i am  suraj";
		String n = s.trim();
		String a = " ";
		String p = "";
		String rep = n.replace(" ", " ");

		System.out.println(rep);

	
	
		String s2 = "";

		char ch[] = s.toCharArray();

		System.out.println(ch);
		for (int i = 0; i < s.length(); i++) {
			if (ch[i] != ' ') {
				s2 += ch[i];
			 } else if ( ch[i - 1] != ' ') {
	                s2 += ' ';
	            }
			

		}
		System.out.println(s2.trim());
	}

}
