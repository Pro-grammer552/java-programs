package myexample.main;

import myexample.model.Student;


import java.util.Scanner;

public class StudentMain {
	static int max = 2;
	static Student[] studArray = new Student[2];
	static int studentCount = 0;

	public static void addStudent() {

		Scanner scanner = new Scanner(System.in);
		System.out.print("Enter Student ID: ");
		int studentId = scanner.nextInt();
		scanner.nextLine();
		System.out.print("Enter Student Name: ");
		String studentName = scanner.nextLine();
		System.out.print("Enter Age: ");
		int age = scanner.nextInt();

		Student s1 = new Student(studentId, studentName, age);

		checkStudentRecord(s1);
		
		
		if (checkStudentRecord(s1)) {
		    System.out.println("Student with the same information already exists.");
		} else if (studentCount < max) {
		    studArray[studentCount] = s1;
		    studentCount++;
		    System.out.println("Student added successfully.");
		} else {
		    System.out.println("Student database is full. Cannot add more students.");
		}


	}
	public static boolean checkStudentRecord(Student s) {
	    for (Student arr : studArray) {
	        if (arr != null && arr.equals(s)) {
	            return true; // Student record already exists
	        }
	    }
	    return false; // Student record does not exist
	}

	
	
	public static void displayStudents() {
		for (int i = 0; i < studentCount; i++) {
            System.out.println(studArray[i]);
        }

	}

	public static void main(String[] args) {
        addStudent();
        addStudent();
        displayStudents();
    

		//Student s = new Student(101, "Suraj", 20);
		//Student s1 = new Student(101, "Suraj", 20);

		//System.out.println(s.equals(s1));

	}

}