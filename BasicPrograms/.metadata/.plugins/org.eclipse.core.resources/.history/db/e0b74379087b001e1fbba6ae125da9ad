package com.prep;

public class WordCount {

	public static void main(String[] args) {

		String arr[] = {"red", "white", "red", "white", "black"};

		int count = 0;
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] == arr[i + 1]) {
				count++;
			}

			System.out.println(arr[i] + "" + count);
		}

	}

}
